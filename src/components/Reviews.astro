---
import UnderlineH2 from "./elements/UnderlineH2.astro";
---

<section class="reviews">
  <div class="container">

      <header class="reviews-header">
        <h2 class="text-h2 text-capitalize">Your Reviews</h2>
        <UnderlineH2 />
        <p class="reviews-header__description text-basic text-basic--20">
          Thanks to our clients for their trust! We strive to provide the best services.
        </p>
      </header>
      <main class="reviews-slider">
          <h1>Слайдер</h1>
      </main>
    </div>

</section>
<style>
  .reviews {
    padding-top: var(--indent_100-40); /* !!! Проверит отступы */
    padding-bottom: var(--indent_100-40); /* !!! Проверит отступы */
    background-color: var(--color-tertiary);
  }



  .reviews-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .reviews-header h2 {
    color: var(--color-primary);
  }

  .reviews-header__description {
    margin-top: 1rem;
    color: var(--color-text-secondary);
  }

  .services-slider {
    display: flex;
    justify-content: space-around;
    column-gap: var(--gap);

    margin-top: 60px; /* !!! Проверит отступы */
  }
</style>

