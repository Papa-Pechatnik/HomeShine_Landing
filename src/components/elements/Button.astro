---
interface Props {
  text: string;
  className?: string;
  className1?: string;
}

const { text, className, className1 } = Astro.props;
---

<button class:list={["flex btn", className, className1]}>
  <span class="btn-text">{text}</span>
  <span class="btn-icon">&#10005;</span>
</button>

<style>
  .btn {
    column-gap: 1.25rem;
    font-family: var(--font-family-primary);
    font-weight: 700;
    line-height: 102%;
    letter-spacing: 0.13em;
    text-transform: uppercase;
    text-align: center;
    white-space: nowrap;
    color: var(--color-main);
    background-color: var(--color-secondary);
    border: 1px solid var(--color-main);
    border-radius: 6.25rem;
    cursor: pointer;
    transition: all 1s;

    width: 100%;
    height: 2.5rem;
    padding: 0.625rem;
  }

  .btn-text {
    font-size: 0.8125rem;
    white-space: nowrap;
  }

  .btn-big {
    padding-left: var(--padding-35);
    padding-right: var(--padding-35);
    width: max-content;
  }

  .btn-small {
    max-width: 12.5rem;
  }

  .btn-icon {
    font-size: 0.5437rem;
    transform: rotate(45deg);
    transition: transform 0.5s;
  }

  .btn-center {
    align-self: center;
  }

  .btn:hover {
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    background-color: var(--color-main);
  }

  .btn:hover .btn-icon {
    transform: rotate(90deg);
  }
  @media screen and (max-width: 992.98px) {
    .btn-small {
      max-width: 60%;
      min-width: 14.125rem;
    }
  }
</style>
